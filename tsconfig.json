{
      "compilerOptions": {
      "outDir": "build",
      "rootDir": "bursdea",
      "sourceMap": true,
      "noImplicitAny": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "module": "commonjs",
      "target": "es6",
      "jsx": "react",
      "strict": true,
      "typeRoots": ["node_modules/@types", "screens/custom-types"],
      "baseUrl": ".",
      "moduleResolution": "node",
      "esModuleInterop": true  },
      "include": ["./bursdea"],
      "exclude": ["node_modules"]
    }
}
